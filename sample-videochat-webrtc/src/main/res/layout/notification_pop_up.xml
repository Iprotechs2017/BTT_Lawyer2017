<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slideView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@color/grey_transparent_20"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:elevation="0dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/notification_header"
                android:visibility="gone">


                <TextView
                    android:id="@+id/notification_to_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Immigrant1"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/sendNotification"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/close_window_send_notification"
                    android:src="@drawable/msg_send"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/close_window_send_notification"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/win_cancel"
                    android:text="Immigrant1"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/header1"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/notification_header"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/icons"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/person_white"
                     />

                <ImageView
                    android:id="@+id/close_window"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/win_cancel"
                    android:text="Immigrant1"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/icons"
                    android:text="12-12-12 10:10:10"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userName"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/icons"
                    android:text="12-12-12 10:10:10"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/customTheam"
                android:id="@+id/editParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                >

                <EditText
                    android:id="@+id/notification_edit_txt"
                    style="@style/customTheam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:maxLength="100"
                    android:gravity="top|left"
                    android:hint="Enter Message"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:lines="4"
                    android:scrollbars="vertical"
                    android:visibility="gone" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/notification_limit"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:layout_below="@+id/editParent"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:text="100/100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/view_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header1"
android:layout_margin="5dp"
                android:text="ajlkdjlaksjdlksjdlkkjalsjdlks"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>