<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VideoChatTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorControlNormal">@color/accent</item>

    </style>
    <style name="spinnerItemStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:gravity">center</item>
    </style>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowActionBar">false</item>-->
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="android:windowBackground">@color/background_app_color</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/color_blue_accent</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/foating_button_bacground</item>
        <item name="fab_colorPressed">@color/foating_button_bacground</item>
        <item name="fab_colorRipple">@color/white</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/foating_button_bacground</item>
        <item name="fab_colorPressed">@color/foating_button_bacground</item>
        <item name="fab_colorRipple">@color/white</item>
    </style>


    <style name="ListItemIconStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="DialogNameStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CallerAvatar">
        <item name="android:layout_width">@dimen/call_avatar_diameter</item>
        <item name="android:layout_height">@dimen/call_avatar_diameter</item>
        <item name="android:padding">24dp</item>
        <item name="android:src">@drawable/ic_person_big</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RoundedImageButton">
        <item name="android:layout_width">@dimen/call_buttons_diameter</item>
        <item name="android:layout_height">@dimen/call_buttons_diameter</item>
        <item name="android:padding">@dimen/call_buttons_padding</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EndCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_end</item>
        <item name="android:src">@drawable/ic_phone_hangup</item>
    </style>

    <style name="TakeCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_take</item>
    </style>

    <style name="ToolbarStyleCall" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>


    <style name="SeekBarPreferenceTitle" parent="WrapContent">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--dialog animation-->
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

</resources>